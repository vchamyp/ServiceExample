<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tester" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Start Service" />

    <TextView
        android:id="@+id/txtDispService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="DisplayStartService" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDispService"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Stop Service" />

    <Button
        android:id="@+id/btnIntentService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStopService"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Start Intent Service" />

    <TextView
        android:id="@+id/txtDispIntenService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStart"
        android:layout_alignStart="@+id/btnStart"
        android:layout_below="@+id/btnIntentService"
        android:layout_marginTop="17dp"
        android:text="DisplayIntentService" />

    <Button
        android:id="@+id/btnBound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtDispService"
        android:layout_alignRight="@+id/txtDispService"
        android:layout_below="@+id/txtDispIntenService"
        android:text="Bind Service" />

    <Button
        android:id="@+id/btnIPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Messenger Service(IPC)" />
</RelativeLayout>
